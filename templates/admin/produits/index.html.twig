{% extends 'base_admin.html.twig' %}

{% block title %}Administration des produits
{% endblock %}

{% block body %}
	<div class="container-fluid col col-9 mx-auto">
		<a href="{{ path('admin_produits_add') }}" class="btn btn-outline-primary mx-2 my-2">Rajouter un produit</a>
		<div class="accordion mb-5" id="AccordeonLeon">
			{% for produit in produits %}
				<div class="accordion-item">
					<h2 class="accordion-header" id="{{produit.id}}">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#{{produit.slug}}" aria-expanded="true" aria-controls="{{produit.slug}}">
							{{produit.shortLibel}}
						</button>

					</h2>
					<div id="{{produit.slug}}" class="accordion-collapse collapse" aria-labelledby="{{produit.id}}" data-bs-parent="#AccordeonLeon">
						<div class="accordion-body">
							{{produit.longLibel}}
						</div>
						<div class="d-flex flex-row justify-content-end mx-3 my-3">
							<a href="{{ path('admin_produits_edit', {id: produit.id}) }}" class="btn btn-outline-success mx-2">Modifier le produit</a>
							<a href="{{ path('admin_produits_delete', {id: produit.id}) }}" class="btn btn-outline-danger mx-2">Supprimer le produit</a>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>


{% endblock %}
