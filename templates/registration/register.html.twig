{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<section class="col">
				<h1>Inscription</h1>

				{{ form_start(registrationForm) }}
				<fieldset class="mb-3">
					<legend>Mon Identité</legend>
					{{ form_row(registrationForm.nom) }}
					{{ form_row(registrationForm.prenom) }}
				</fieldset>
				<fieldset class="mb-3">
					<legend>Mes Coordonnées</legend>
					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.telephone) }}
				</fieldset>
				<fieldset class="mb-3">
					<legend>Mon adresse</legend>
					{{ form_row(registrationForm.nomination_adresse) }}
					{{ form_row(registrationForm.adresse) }}
					{{ form_row(registrationForm.ville) }}
					{{ form_row(registrationForm.cp) }}
				</fieldset>
				<fieldset class="mb-3">
					<legend>Mon mot de passe</legend>
					{{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
				</fieldset>
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-outline-primary btn-lg my-3">M'inscrire</button>
				<a href="{{ path('app_login') }}" class="btn btn-outline-secondary btn-lg my-3 ms-2">Me connecter</a>
				{{ form_end(registrationForm, {render_rest: false}) }}

			</section>
		</div>
	</section>
{% endblock %}
